		$(".btn").click(function(){
			var btn = $(this);
			var sage = $(this).parent().find("option:selected").text();

			var arr = sage.split(" ");
			var sort = arr[1];
			var amount = parseInt(arr[0]);
			var a = parseInt($("#a").text());
			var b = parseInt($("#b").text());
			var c = parseInt($("#c").text());
			$.post("/buy",{sage:sage},function(result){
				if(result){
					console.log(result);
					btn.empty().text('已兑换');
					switch (sort){
						case "A" :
							a = a - amount;
							$("#a").text(a);
							break;
					    case "B" :
							b = b - amount;
							$("#b").text(b);
							break;
						case "C" :
							c = c - amount;
							$("#c").text(c);
							break;
						default:
							break;
						}
					}
			})
		})
